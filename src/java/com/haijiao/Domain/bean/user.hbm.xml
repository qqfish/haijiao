<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="com.haijiao.Domain.bean.User" table="user" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
    <id name="userId" type="string" column="userid">
        <generator class="native"></generator> 
    </id>
    <property name="account" type="string"></property>
    <property name="name" type="string"></property>
    <property name="userType" type="string"></property>
    <property name="coin" type="integer"></property>
    <list name="comments">
      <key column="takenby"></key>
      <index column="ucindex"></index>
      <one-to-many class="com.haijiao.Domain.bean.Comment"></one-to-many>
    </list>
    <list name="fileGroups">
      <key column="ownedby"></key>
      <index column="ufgindex"></index>
      <one-to-many class="com.haijiao.Domain.file.UserFileGroup"></one-to-many>
    </list>
    <joined-subclass name="com.haijiao.Domain.bean.Student" table="student">
        <key column="sid"></key>
        <property name="age" type="integer"></property>
    </joined-subclass>
    <joined-subclass name="com.haijiao.Domain.bean.Teacher" table="teacher">
        <key column="tid"></key>
        <property name="brief_intro" type="string"></property>
        <property name="intro" type="string"></property>
        <property name="videoUrl" type="string"></property>
        <property name="audition" type="boolean"></property>
        <property name="wagePerhour" type="integer"></property>
        <one-to-one name="schedule" class="com.haijiao.Domain.bean.Schedule"></one-to-one>
        <list name="classes">
            <key column="openedby"></key>
            <index column="cindex"></index>
            <element column="class" type="string"></element>
        </list>
    </joined-subclass>
  </class>
</hibernate-mapping>
