<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.locale" value="zh_CN" />
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.ui.theme" value="simple" />
   
    <bean type="org.apache.struts2.dispatcher.multipart.MultiPartRequest" name="requestParser"
        class="com.haijiao.presentation.bean.upload.OurMultiPartRequest" scope="default" optional="true" />
    <constant name="struts.multipart.handler" value="requestParser" />
    <constant name="struts.multipart.saveDir" value="tmp" />
    
    <package name="haijiao" namespace="/" extends="struts-default">
        <action name="login" class="LoginAction">
            <result name="input">index.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="logout" class="LogoutAction">
            <result name="success">index.jsp</result>
        </action>
        <action name="register" class="RegisterAction" method="teacher">
            <result name="input">index.jsp</result>
            <result name="success">register.jsp</result>
        </action>
        <action name="register" class="RegisterAction" method="student">
            <result name="input">index.jsp</result>
            <result name="success">register.jsp</result>
        </action>
        <action name="toChangeInfo" class="ToChangeInfoAction">
            <result name="success">changeInfo.jsp</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="teacherRegister">
            <result name="input">register.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="studentRegister">
            <result name="input">register.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="teacherChange">
            <result name="input">changeInfo.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="studentChange">
            <result name="input">changeInfo.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="changePassword">
            <result name="input">changePassword.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="changePasswordById">
            <result name="input">resetPassword.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="addLesson">
            <result name="input">changeInfo.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeInfo" class="ChangeInfoAction" method="deleteLesson">
            <result name="input">changeInfo.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="changeIntro" class="ChangeIntroAction">
            <result name="input">changeInfo.jsp</result>
            <result name="success" type="chain">index</result>
        </action>
        <action name="dealApply" class="DealApplyAction">
            <result name="success" type="chain">index</result>
        </action>
        <action name="index" class="IndexAction">
            <result name="success">index.jsp</result>
            <result name="teacher">teacherIndex.jsp</result>
            <result name="student">studentIndex.jsp</result>
        </action>
        <action name="searchTeacher" class="SearchTeacherAction">
            <result name="success">teachers.jsp</result>
            <result name="input">teachers.jsp</result>
        </action>
        <action name="searchTeacher" class="SearchTeacherAction" method="score">
            <result name="success">teachers.jsp</result>
            <result name="input">teachers.jsp</result>
        </action>
        <action name="searchTeacher" class="SearchTeacherAction" method="price">
            <result name="success">teachers.jsp</result>
            <result name="input">teachers.jsp</result>
        </action>
        <action name="searchTeacher" class="SearchTeacherAction" method="hot">
            <result name="success">teachers.jsp</result>
            <result name="input">teachers.jsp</result>
        </action>
        <action name="getTeacherInfo" class="GetTeacherInfoAction">
            <result name="success">teaInfo.jsp</result>
        </action>
        <action name="bookTeacher" class="BookTeacherAction">
            <result name="success" type="chain">index</result>
        </action>
        <action name="addFreeTime" class="AddFreeTimeAction">
            <result name="success" type="chain">index</result>
            <result name="input" type="chain">index</result>
        </action>
        <action name="getStudentInfo" class="GetStudentInfoAction">
            <result name="success">studentInfo.jsp</result>
        </action>
        <action name="changeAudition" class="ChangeAuditionAction">
            <result name="success">personal.jsp</result>
            <result name="unconnected">error.jsp</result>
        </action>
        <action name="changeSchedule" class="ChangeScheduleAction">
            <result name="success">personal.jsp</result>
            <result name="unconnected">error.jsp</result>
        </action>
        <action name="getCommonFile" class="GetCommonFileAction">
            <result name="success">fileList.jsp</result>
            <result name="unconnected">error.jsp</result>
        </action>
        <action name="sendMail" class="SendMailAction">
            <result name="success" type="chain">getMail</result>
            <result name="input" type="chain">getMail</result>
        </action>
        <action name="getMail" class="GetMailAction">
            <result name="success" type="">mail.jsp</result>
            <result name="input">error.jsp</result>
        </action>
        <action name="getMailNum" class="GetMailNumAction"/>
        <action name="enterRoom" class="EnterRoomAction">
            <result name="success">/room/index.jsp</result>
            <result name="false">index.jsp</result>
        </action>
        <action name="enterPublicRoom" class="EnterPublicRoomAction">
            <result name="success">/room/index.jsp</result>
            <result name="false">index.jsp</result>
        </action>
        <action name="makeCommentReply" class="MakeCommentReplyAction" method="comment">
            <result name="success" type="chain">index</result>
        </action>
        <action name="makeCommentReply" class="MakeCommentReplyAction" method="reply">
            <result name="success" type="chain">index</result>
        </action>
        <action name="checkEmail" class="CheckEmailAction"></action>
        <action name="contactUs" class="ContactUsAction">
            <result name="success" type="chain">index</result>
        </action>
        <action name="uploadPic" class="UploadPicAction">
            <result name="success" type="chain">index</result>
            <result name="input">error.jsp</result>
            <interceptor-ref name="fileUpload">
                <!-- 文件过滤 -->
                <param name="allowedTypes">image/bmp,image/png,image/gif,image/jpeg</param>
                <!-- 文件大小, 以字节为单位 -->
                <param name="maximumSize">1025956</param>
            </interceptor-ref>
            <!-- 默认拦截器必须放在fileUpload之后，否则无效 -->
            <interceptor-ref name="defaultStack" />
        </action>
        <action name="uploadProcess" class="UploadProcessAction"/>
        <action name="forgetPassword" class="ForgetPasswordAction">
            <result name="success" type="chain">index</result>
            <result name="input">forgetPassword.jsp</result>
        </action>
        <action name="resetPassword" class="ResetPasswordAction">
            <result name="success">resetPassword.jsp</result>
        </action>
    </package>
</struts>
