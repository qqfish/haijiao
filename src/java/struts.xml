<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.locale" value="zh_CN" />
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.objectFactory" value="spring"/>
    
    <package name="haijiao" namespace="/" extends="struts-default">
        <global-results>
            <result name="login">login.jsp</result>
        </global-results>
        <action name="login" class="LoginAction">
            <result name="input">login.jsp</result>
            <result name="success">index.jsp</result>
        </action>
        <action name="toRegister">
            <result name="success" type="redirect">register.jsp</result>
        </action>
        <action name="register" class="com.haijiao.presentation.action.RegisterAction">
            <result name="input">register.jsp</result>
            <result name="success">index.jsp</result>
        </action>
        <!-- Add more actions here -->
    </package>
</struts>